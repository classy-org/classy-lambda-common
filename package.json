{
  "name": "classy-pay-core",
  "version": "0.0.6",
  "description": "Shared tools used in ClassyPay-related projects",
  "main": "lib/index.js",
  "scripts": {
    "test": "yarn run lint && find test/ -iname \"test*.ts\" | xargs ./node_modules/istanbul/lib/cli.js cover _mocha -- -r ts-node/register",
    "build": "yarn run lint && tsc -p ./",
    "tslint": "find src/ test/ -iname \"*.ts\" | xargs tslint -c ./tslint.json",
    "lint": "yarn run tslint",
    "prepublish": "yarn run clean && yarn run build",
    "clean": "rm -rfv lib"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/classy-org/classy-pay-core.git"
  },
  "keywords": [
    "classy",
    "pay",
    "core"
  ],
  "author": "jeremy@brownjava.org",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/classy-org/classy-pay-core/issues"
  },
  "homepage": "https://github.com/classy-org/classy-pay-core",
  "dependencies": {
    "@types/aws-lambda": "^8.10.7",
    "@types/bluebird": "^3.5.21",
    "@types/bunyan": "^1.8.4",
    "@types/events": "^1.2.0",
    "@types/lodash": "^4.14.110",
    "@types/node": "^10.3.6",
    "@types/request": "^2.47.1",
    "@types/request-promise": "^4.1.41",
    "aws-lambda": "^0.1.2",
    "bluebird": "^3.5.1",
    "bugsnag": "^2.1.3",
    "bunyan": "^1.8.12",
    "classy-api-client": "latest",
    "lodash": "^4.17.5",
    "nodecredstash": "^2.0.2",
    "request-promise": "^4.2.2",
    "source-map-support": "^0.5.4",
    "ts-node": "^7.0.0",
    "uuid": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.3",
    "@types/mock-require": "^2.0.0",
    "@types/rewire": "^2.5.28",
    "@types/should-sinon": "^0.0.3",
    "@types/sinon": "^5.0.1",
    "istanbul": "1.1.0-alpha.1",
    "mocha": "^5.1.1",
    "mocha-cli": "^1.0.1",
    "mock-require": "^3.0.2",
    "rewire": "^4.0.1",
    "should": "^13.2.1",
